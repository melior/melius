{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@melius/nav-tabs": ["libs/nav-tabs/src/index.ts"],
      "@melius/sidenav": ["libs/sidenav/src/index.ts"],
      "@melius/demo/sidenav": ["libs/demo/sidenav/src/index.ts"],
      "@melius/docs/sidenav": ["libs/docs/sidenav/src/index.ts"],
      "@melius/docs/nav-tabs": ["libs/docs/nav-tabs/src/index.ts"],
      "@melius/docs/home": ["libs/docs/home/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
